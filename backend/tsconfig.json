{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "skipLibCheck": true,
    },
    "ts-node": {
        "esm": true
    },
    "include": ["**/*.ts"]
}
